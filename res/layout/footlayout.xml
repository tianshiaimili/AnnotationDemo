<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" 
              android:background="#FFFFFF"
              >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp" >

        <TextView
            android:id="@+id/local_titles"
            style="@style/postsstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/details_information"
            android:drawablePadding="20dp"
            android:text="本地使用信息" />

          <Gallery
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/local_titles"
            android:layout_marginTop="40dp" 
            android:unselectedAlpha="0.6"
            android:spacing="20dp"
             />


        <LinearLayout
            android:id="@+id/care_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gallery"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/care_titles"
                    style="@style/postsstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/jinghua_question"
                    android:drawablePadding="20dp"
                    android:paddingBottom="26dp"
                    android:paddingTop="34dp"
                    android:text="孕中期准妈最关心的问题" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/care_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/care_titles_1"
                        style="@style/postsstyle_sub_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1.唐氏筛查" />

                    <TextView
                        android:id="@+id/care_titles_1_des"
                        style="@style/postsstyle_sub_des_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="帅选多少周做？不做行不行？" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="26dp"
                        android:paddingTop="38dp"
                        android:src="@drawable/jinghua_zuola" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />
            </LinearLayout>

            <!-- 第二个 -->

            <LinearLayout
                android:id="@+id/care_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="26dp"
                    android:paddingBottom="26dp"
                    >

                    <TextView
                        android:id="@+id/care_titles_2"
                        style="@style/postsstyle_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="2.四维彩超" />

                    <TextView
                        android:id="@+id/care_titles_2_des"
                        style="@style/postsstyle_sub_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="四维能看出男宝女宝吗？" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"
                        android:src="@drawable/jinghua_zuola" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />
            </LinearLayout>

            <!-- 第三个 -->

            <LinearLayout
                android:id="@+id/care_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="26dp"
                    android:paddingBottom="26dp"
                    >

                    <TextView
                        android:id="@+id/care_titles_3"
                        style="@style/postsstyle_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="3.胎动" />

                    <TextView
                        android:id="@+id/care_titles_3_des"
                        style="@style/postsstyle_sub_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="胎动什么感觉，多少周有反应" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"
                        android:src="@drawable/jinghua_zuola" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />
            </LinearLayout>

            <!-- 第四个 -->

            <LinearLayout
                android:id="@+id/care_layout_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="26dp"
                    android:paddingBottom="26dp"
                    >

                    <TextView
                        android:id="@+id/care_titles_4"
                        style="@style/postsstyle_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="4.体重增长" />

                    <TextView
                        android:id="@+id/care_titles_4_des"
                        style="@style/postsstyle_sub_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="大家怀孕都长了多少斤？" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"
                        android:src="@drawable/jinghua_zuola" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />
            </LinearLayout>

            <!-- 第五个 -->

            <LinearLayout
                android:id="@+id/care_layout_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="26dp"
                    android:paddingBottom="26dp"
                    >

                    <TextView
                        android:id="@+id/care_titles_5"
                        style="@style/postsstyle_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="5.预防妊诊纹" />

                    <TextView
                        android:id="@+id/care_titles_5_des"
                        style="@style/postsstyle_sub_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="预防妊诊纹的方法有哪些？" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"
                        android:src="@drawable/jinghua_zuola" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        >
        <com.example.annotationdemo.view.CustomGridView
            android:id="@+id/gridview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:horizontalSpacing="20dp"
            android:numColumns="3"
            android:verticalSpacing="20dp"></com.example.annotationdemo.view.CustomGridView>

    </LinearLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        >

    </LinearLayout>

</LinearLayout>