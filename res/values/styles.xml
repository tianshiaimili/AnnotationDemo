<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    

<!--精华页大title item的style-->
    <style name="postsstyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!--精华页小title 第一行item的style-->
    <style name="postsstyle_sub_main" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">34dp</item>
        <item name="android:paddingBottom">26dp</item>
    </style>

    <!--精华页小title第一行描述的style-->
    <style name="postsstyle_sub_des_main" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">38dp</item>
        <item name="android:paddingBottom">26dp</item>
    </style>

    <!--精华页小title item的style-->
    <style name="postsstyle_sub" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <!--精华页小title描述的style-->
    <style name="postsstyle_sub_des" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#aaaaaa</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">4dp</item>
    </style>


    
</resources>